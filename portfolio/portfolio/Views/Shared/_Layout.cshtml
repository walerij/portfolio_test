@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Portfolio</title>
   
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">   
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top" id="Mytopmenu-nav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("portfolio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Работы", "Works", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Прайс", "Price", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Контакты", "Contacts", "Home")
                    </li>
                </ul>
				<ul class="nav navbar-nav navbar-right" style="padding-top: 10px;">
					<li>
						@Html.ActionLink("Вход", "Loginos", "Home")
					</li>
				</ul>
					<!--@Html.Action("MyAdmin","Home")-->
					<!--@Html.Partial("_LoginRight")--->
					<!--@Html.Partial("_AdminMenuRight")-->

            </div>
        </div>
    </div>
        
 
    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Portfolio</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
  
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
</body>
</html>